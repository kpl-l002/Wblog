{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "css/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "js/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/comments",
      "destination": "/api/comments.js"
    },
    {
      "source": "/api/check-ip",
      "destination": "/api/check-ip.js"
    },
    {
      "source": "/((?!\\.).*)?$",
      "destination": "/index.html"
    }
  ],
  "outputDirectory": "out"
}
