{
  "version": 2,
  "framework": null,
  "buildCommand": "node build.js",
  "devCommand": "vercel dev",
  "outputDirectory": "out",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30,
      "memory": 1024,
      "includeFiles": "**/*.json",
      "excludeFiles": "**/node_modules/**"
    }
  },
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": ["api/**/*.json"]
      }
    },
    {
      "src": "build.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "css/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "js/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/comments",
      "dest": "/api/comments.js",
      "methods": ["GET", "POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept"
      }
    },
    {
      "src": "/api/check-ip",
      "dest": "/api/check-ip.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/deploy-status",
      "dest": "/api/deploy-status.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/deploy-webhook",
      "dest": "/api/deploy-webhook.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/authenticate",
      "dest": "/api/authenticate.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/api/comments-data",
      "dest": "/api/comments-data.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/posts",
      "dest": "/api/posts.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/users",
      "dest": "/api/users.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/api/users/register",
      "dest": "/api/users.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/users/login",
      "dest": "/api/users.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "^/((?!api).)*$",
      "dest": "/$1",
      "status": 200
    },
    {
      "src": "/(.*)",
      "dest": "/404.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "git": {
    "scope": "blog-project",
    "ignore": ["**/.git/**", "**/.vscode/**", "**/*.log", "**/dist/**", "**/coverage/**"]
  },
  "regions": ["hnd1", "sfo1", "iad1", "cdg1"],
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
